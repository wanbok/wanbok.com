<h1>Listing surveys</h1>

<table>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Sex</th>
    <th>Age</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @surveys.each do |survey| %>
  <tr>
    <td><%= survey.survey.title %></td>
    <td><%= survey.survey.user %></td>
    <td><%= survey.survey.sex %></td>
    <td><%= survey.survey.age %></td>
    <td><%= link_to 'Show', survey_path(survey.survey.user) %></td>

    <td><%= link_to 'Edit', edit_survey_path(survey.survey.user) %></td>
    <td><%= link_to 'Destroy', survey_path(survey.survey.user), method: :delete, data: { confirm: 'Are you sure?' } %></td>

  </tr>
<% end %>
</table>

