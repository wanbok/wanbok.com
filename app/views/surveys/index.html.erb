<h1>Listing surveys</h1>

<table>
  <tr>
    <th>분류</th>
    <th>User</th>
    <th>Sex</th>
    <th>Age</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<%
@surveys.each do |s|
  survey = s[:survey]
  aggregation = s[:aggregation]
%>
  <tr>
    <td><%= aggregation[:class] + "(" + aggregation[:total] + "점)" %></td>
    <td><%= survey.user %></td>
    <td><%= survey.sex %></td>
    <td><%= survey.age %></td>
    <td><%= link_to 'Show', survey_path(survey.user) %></td>

    <td><%= link_to 'Edit', edit_survey_path(survey.user) %></td>
    <td><%= link_to 'Destroy', survey_path(survey.user), method: :delete, data: { confirm: 'Are you sure?' } %></td>

  </tr>
<% end %>
</table>

<br />

